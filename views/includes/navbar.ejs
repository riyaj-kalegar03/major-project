<style>
  .navbar .color {
    color: #ee4b2b;
    font-size: 1.2rem;
    font-weight: bold;
    margin-right: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: "Comfortaa", cursive;
  }

  .search-btn {
    background-color: #ee4b2b;
    color: white;
    border-radius: 25px;
    padding: 0.3rem 0.5rem;
    font-size: 0.9rem;
  }
  .search-btn:hover {
    color: white;
  }
  .search-btn i {
    display: inline;
  }
  .search-inp {
    font-size: 0.9rem;
    border-radius: 25px;
    padding: 0rem 3rem;
  }
  .bg {
    background-color: white;
  }
</style>

<nav
  class="navbar navbar-expand-md navbar-light bg-body-light border-bottom sticky-top"
>
  <div class="container-fluid">
    <a class="navbar-brand brand color" href="/listings"
      ><i class="fa-solid fa-house-tsunami"></i>&nbsp;HostHaven</a
    >
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse bg" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" aria-current="page" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form
          class="d-flex"
          role="search"
          method="get"
          action="/listings/filter"
        >
          <input
            class="form-control me-2 search-inp"
            type="search"
            placeholder="Search eg: United States"
            name="search"
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>&nbsp;&nbsp;Search
          </button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if(!currUser) {%>
        <a class="nav-link" aria-current="page" href="/Signup"><b>Signup</b></a>
        <a class="nav-link" href="/login"><b>Login</b></a>

        <%}%> <% if(currUser) {%>

        <a class="nav-link" href="/logout"><b>Logout</b></a>

        <%}%>
      </div>
    </div>
  </div>
</nav>
