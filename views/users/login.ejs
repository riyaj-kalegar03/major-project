<% layout("./layouts/boilerplate.ejs") %>
<body>
  <div class="row">
    <div class="col-6 offset-3 mt-3 login-signup">
      <h4 class="mt-2 offset-5 mb-2">Login</h4>
      <form
        action=""
        method="post"
        action="/login"
        novalidate
        class="needs-validation mt-2 mb-5"
      >
        <div class="mb-3">
          <label for="username" class="form-label">username</label>
          <input type="text" name="username" class="form-control" required />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">password</label>
          <input
            type="password"
            name="password"
            class="form-control"
            required
          />
        </div>
        <button class="btn btn-primary mt-3 offset-5">login</button>
      </form>
      <p>Doesn't heve account?<a href="/signup">Signup</a></p>
    </div>
  </div>
</body>
