<% layout("./layouts/boilerplate.ejs")%>
<body>
  <h2 class="mb-3 mt-3 offset-2">Create a New Listing</h2>
  <div class="row">
    <div class="col-8 offset-2 login-signup">
      <form
        method="post"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            class="form-control"
            placeholder="Add a catchy title"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            id=""
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter valid description</div>
        </div>

        <div class="mb-3">
          <label for="image-link" class="form-label">Image link</label>
          <input
            type="file"
            name="listing[image]"
            class="form-control"
            placeholder="URL/Link"
          />
        </div>

        <div class="row">
          <div class="mb-3 col-4">
            <label for="price" class="form-label">Price</label>
            <input
              name="listing[price]"
              class="form-control"
              placeholder="1200"
              required
            />
            <div class="invalid-feedback">Please enter valid price</div>
          </div>

          <div class="mb-md-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              name="listing[location]"
              class="form-control"
              placeholder="Ilkal, Karnataka"
              required
            />
            <div class="invalid-feedback">Please enter valid location</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            class="form-control"
            placeholder="India"
            required
          />
          <div class="invalid-feedback">Please enter valid country</div>
        </div>

        <button class="btn btn-success mb-2">Create</button>
      </form>
    </div>
  </div>
</body>
